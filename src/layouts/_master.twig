<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ block("title") }}</title>

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/assets/themes/AdminLTE/plugins/fontawesome-free/css/all.min.css" />
    <!-- Hover -->
    <link rel="stylesheet" href="/assets/themes/AdminLTE/plugins/hover/hover-min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="/assets/themes/AdminLTE/dist/css/adminlte.min.css" />

    <link rel="stylesheet" href="/assets/css/common.css">
    <style>
        #network-box {
            height: calc(100vh - calc(3.5rem + 1px) - calc(3.5rem + 1px));
        }
    </style>
  </head>
  <body class="hold-transition layout-top-nav">
    <div class="wrapper">
      <!-- Navbar -->
      {% include "../parts/_navbar.twig" %}
      <!-- /.navbar -->

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Main content -->
        <div class="content">
          <div class="container">
            {{ block("content") }}
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Main Footer -->
      {% include "../parts/_footer.twig" %}
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->

    <!-- jQuery -->
    <script src="/assets/themes/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/assets/themes/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/assets/themes/AdminLTE/dist/js/adminlte.min.js"></script>
  </body>
</html>
